{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/main/shared/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "baseUrl": "./",
    "paths": {
      "date-fns": ["./node_modules/date-fns"],
      "node-pty": ["./node_modules/node-pty"],
      "uuid": ["./node_modules/uuid"]
    }
  }
}
